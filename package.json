{
  "name": "release",
  "version": "1.1.0",
  "description": "Auto Release based on Conventional Commits",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist --license licenses.txt",
    "clean": "rm -rf lib dist",
    "prebuild": "pnpm run clean",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prepare": "husky"
  },
  "keywords": [
    "github-actions",
    "release",
    "changelog",
    "conventional-commits"
  ],
  "author": "oljc",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "conventional-commits-parser": "^5.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  }
}
